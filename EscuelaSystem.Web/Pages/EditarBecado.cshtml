@page
@model EscuelaSystem.Web.Pages.EditarBecadoModel
@{
}

<form method="post">
    <input type="hidden" asp-for="Becado.Id" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Becado.Codigo"></label>
        <input type="text" class="form-control" asp-for="Becado.Codigo" placeholder="Ingrese un codigo de Becado">
        <span class="text-danger" asp-validation-for="Becado.Codigo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Becado.Descripcion"></label>
        <input type="text" class="form-control" asp-for="Becado.Descripcion" placeholder="Ingrese el nombre del Becado">
        <span class="text-danger" asp-validation-for="Becado.Descripcion"></span>
    </div>
    <div class="form-group">
        <label asp-for="Becado.Inscrito"></label>
        <input type="checkbox" class="form-control" asp-for="Becado.Inscrito">
    </div>
    <button type="submit" class="btn btn-warning">Guardar</button> <br />
    <a asp-page="/Becados">Regresar a Becados</a>
</form>
